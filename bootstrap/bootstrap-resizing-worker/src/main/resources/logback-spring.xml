<?xml version="1.0" encoding="UTF-8"?>
<!--
    Logback Configuration for FileFlow Resizing Worker
    - Development: Console with pattern format
    - Production: JSON structured logging for CloudWatch/ELK
    - OpenTelemetry: traceId/spanId correlation via MDC
-->
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Application Properties -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="fileflow-resizing-worker"/>
    <springProperty scope="context" name="APP_ENV" source="spring.profiles.active" defaultValue="local"/>

    <!-- Console Pattern for Development -->
    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg [traceId=%X{traceId:-N/A}, spanId=%X{spanId:-N/A}]%n"/>

    <!-- ============================================ -->
    <!-- Development Profile (local, test)           -->
    <!-- ============================================ -->
    <springProfile name="local,test,default">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${CONSOLE_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <!-- Application-specific logging -->
        <logger name="com.ryuqq.fileflow" level="DEBUG"/>

        <!-- SQS Listener -->
        <logger name="io.awspring.cloud.sqs" level="DEBUG"/>

        <!-- Hibernate SQL (Development only) -->
        <logger name="org.hibernate.SQL" level="DEBUG"/>
    </springProfile>

    <!-- ============================================ -->
    <!-- Production Profile (prod, staging)          -->
    <!-- ============================================ -->
    <springProfile name="prod,staging">
        <!-- Sentry Appender for Error Tracking -->
        <appender name="SENTRY" class="io.sentry.logback.SentryAppender">
            <!-- DSN is configured in application.yml -->
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
        </appender>

        <!-- JSON Structured Logging -->
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <!-- Standard Fields -->
                <includeMdcKeyName>traceId</includeMdcKeyName>
                <includeMdcKeyName>spanId</includeMdcKeyName>
                <includeMdcKeyName>fileAssetId</includeMdcKeyName>
                <includeMdcKeyName>messageId</includeMdcKeyName>

                <!-- Custom Fields -->
                <customFields>{"service":"${APP_NAME}","environment":"${APP_ENV}"}</customFields>

                <!-- Timestamp Format -->
                <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampPattern>

                <!-- Field Names -->
                <fieldNames>
                    <timestamp>@timestamp</timestamp>
                    <message>message</message>
                    <logger>logger</logger>
                    <level>level</level>
                    <thread>thread</thread>
                    <stackTrace>stack_trace</stackTrace>
                </fieldNames>

                <!-- Stack Trace Configuration -->
                <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                    <maxDepthPerThrowable>30</maxDepthPerThrowable>
                    <maxLength>4096</maxLength>
                    <shortenedClassNameLength>20</shortenedClassNameLength>
                    <rootCauseFirst>true</rootCauseFirst>
                </throwableConverter>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="SENTRY"/>
        </root>

        <!-- Application-specific logging -->
        <logger name="com.ryuqq.fileflow" level="INFO"/>

        <!-- Resizing Worker specific -->
        <logger name="com.ryuqq.fileflow.application.asset.processor" level="INFO"/>

        <!-- Reduce Spring verbosity -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>

        <!-- AWS SDK -->
        <logger name="software.amazon.awssdk" level="WARN"/>
        <logger name="io.awspring.cloud" level="WARN"/>

        <!-- Sentry SDK (Reduce noise from Sentry itself) -->
        <logger name="io.sentry" level="WARN"/>
    </springProfile>

</configuration>
