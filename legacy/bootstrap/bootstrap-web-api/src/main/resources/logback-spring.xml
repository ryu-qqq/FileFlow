<?xml version="1.0" encoding="UTF-8"?>
<!--
========================================
Logback Configuration for Web API
========================================
CloudWatch Logs + Console + File Logging
JSON 포맷 (Logstash Encoder)
@author FileFlow Team
@since 1.0.0
========================================
-->
<configuration>
    <!-- ========================================
         Property Definitions
         ======================================== -->
    <springProperty scope="context" name="APPLICATION_NAME" source="spring.application.name" defaultValue="fileflow-web-api"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="LOG_FILE" value="logs/application.log"/>
    
    <!-- AWS CloudWatch 설정 (환경변수로 주입) -->
    <springProperty scope="context" name="AWS_REGION" source="aws.cloudwatch.region" defaultValue="ap-northeast-2"/>
    <springProperty scope="context" name="LOG_GROUP_NAME" source="aws.cloudwatch.log-group" defaultValue="/aws/ecs/fileflow-web-api"/>
    <springProperty scope="context" name="LOG_STREAM_NAME" source="aws.cloudwatch.log-stream" defaultValue="web-api"/>

    <!-- ========================================
         Console Appender (개발 환경)
         ======================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================
         Console Appender - JSON 포맷 (프로덕션)
         ======================================== -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${APPLICATION_NAME}","service":"web-api"}</customFields>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>tenantId</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- ========================================
         File Appender (로컬 개발 환경)
         ======================================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ========================================
         Async Appender (성능 향상)
         ======================================== -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="CONSOLE_JSON"/>
    </appender>

    <!-- ========================================
         Logger Configuration
         ======================================== -->
    <!-- Application Logger -->
    <logger name="com.ryuqq.fileflow" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Spring Framework -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    
    <!-- Hibernate (JPA) -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    
    <!-- HikariCP -->
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- ========================================
         Profile-Specific Configuration
         ======================================== -->
    <!-- Local 환경: 콘솔 + 파일 로깅 -->
    <springProfile name="local">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- Docker 환경: JSON 콘솔 로깅 -->
    <springProfile name="docker">
        <root level="INFO">
            <appender-ref ref="ASYNC_CONSOLE"/>
        </root>
    </springProfile>

    <!-- Production 환경: JSON 콘솔 로깅 (CloudWatch로 전송) -->
    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="ASYNC_CONSOLE"/>
        </root>
        
        <!-- Application Logger는 INFO 레벨 -->
        <logger name="com.ryuqq.fileflow" level="INFO" additivity="false">
            <appender-ref ref="ASYNC_CONSOLE"/>
        </logger>
    </springProfile>

    <!-- Default: 콘솔 로깅 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
